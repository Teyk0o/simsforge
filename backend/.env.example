# Server
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=simsforge
DATABASE_USER=simsforge_user
DATABASE_PASSWORD=your_secure_password_here

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-must-be-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=.package,.ts4script,.zip

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Payment (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
PLATFORM_COMMISSION_RATE=0.15

# Email (Optional for Phase 1)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@simsforge.com
SMTP_PASSWORD=your_email_password_here
EMAIL_FROM=SimsForge <noreply@simsforge.com>

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
