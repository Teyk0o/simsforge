{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SimsForge",
  "version": "0.2.0",
  "identifier": "com.simsforge.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../out"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "SimsForge - Mod Manager",
        "width": 1280,
        "height": 720,
        "minWidth": 1280,
        "minHeight": 720,
        "resizable": false,
        "fullscreen": false,
        "focus": true,
        "transparent": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  },
  "updater": {
    "active": true,
    "endpoints": [
      "https://YOUR_GITHUB_USERNAME.github.io/simsforge/latest.json"
    ],
    "dialog": true,
    "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQzMzZGNEVGRUY5QzBGMDUKUldRRkQ1enY3L1EyMDA3WXBKQU5ZNEYrYXBGbVhVQ2s4aTVsWGpUaERlTCtwV0JkNWhZVytlVmgK"
  }
}
