{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "splash"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-close",
    "core:window:allow-show",
    "core:window:allow-set-focus",
    "core:window:allow-get-all-windows",
    "core:window:allow-set-title",
    "core:app:allow-version",
    "opener:default",
    "dialog:default",
    "fs:default",
    "fs:allow-exists",
    "fs:read-all",
    "fs:write-all",
	"shell:allow-open",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "launch-game",
          "cmd": "cmd",
          "args": ["/c", "start", "", { "validator": ".*" }],
          "sidecar": false
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "check-process",
          "cmd": "powershell",
          "args": ["-Command", { "validator": "Get-Process -Name .* -ErrorAction SilentlyContinue" }],
          "sidecar": false
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "upload:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*.forgecdn.net/**" },
        { "url": "http://localhost:5000/**" }
      ]
    }
  ]
}